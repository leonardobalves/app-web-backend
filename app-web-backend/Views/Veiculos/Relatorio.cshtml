@model app_web_backend.Models.Veiculo

@{
    ViewData["Title"] = "Relatorio";
}

<h2>Veículo: @Model.Nome</h2>

<div>
    <h4>Consumos</h4>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Consumo
                </th>
                <th>
                    Data
                </th>
                <th>
                    Valor
                </th>
                <th>
                    Km
                </th>
                <th>
                    Tipo
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Consumos.OrderByDescending(c => c.Date))
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Valor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Km)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipo)
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
